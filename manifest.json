{
    "name": "ZenFeed - Hide Shorts & Reels",
    "description": "Helps you stay focused by hiding short-form content like YouTube Shorts, Instagram Reels, and Facebook Reels.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": ["storage", "activeTab"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["scripts/youtube.js"],
            "run_at": "document_end"
        }
    ]
}